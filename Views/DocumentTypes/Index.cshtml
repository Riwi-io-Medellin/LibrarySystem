<div class="text-center">
    <h1 class="display-4">Document Types</h1>
</div>

<p>
    <a asp-controller="DocumentTypes" asp-action="Create" class="btn btn-primary">Create New Document Type</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Abbreviation
            </th>
            <th>
                Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var element in Model)
        {
            <tr>
                <td>
                    @element.Id
                </td>
                <td>
                    @element.Name
                </td>
                <td>
                    @element.Abbreviation
                </td>
                <td>
                    @element.Description
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="1" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="1" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="1" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }



